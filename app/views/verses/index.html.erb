<p id="notice"><%= notice %></p>

<div class="col-xs-">

  <h1>Listing Verses</h1>
  
  <table>
    <thead>
      <tr>
        <th>Book</th>
        <th>Chapter start</th>
        <th>Chapter end</th>
        <th>Verse start</th>
        <th>Verse end</th>
        <th>Passage</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @verses.each do |verse| %>
        <tr>
          <td><%= verse.book %></td>
          <td><%= verse.chapter_start %></td>
          <td><%= verse.chapter_end %></td>
          <td><%= verse.verse_start %></td>
          <td><%= verse.verse_end %></td>
          <td><%= verse.passage %></td>
          <td><%= link_to 'Show', verse %></td>
          <td><%= link_to 'Edit', edit_verse_path(verse) %></td>
          <td><%= link_to 'Destroy', verse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Verse', new_verse_path %>
</div>